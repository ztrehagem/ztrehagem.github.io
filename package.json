    }
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "json-loader": "^0.5.7",
    "npm-run-all": "^4.1.5",
    "nuxt": "^2.6.1",
    "pug": "^2.0.3",
    "pug-plain-loader": "^1.0.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "yaml-loader": "^0.5.0"
  }
}
